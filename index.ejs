<%- include('./views/partials/header') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="editor-container">
                    <!-- Theme toggle button -->
                    <div class="theme-toggle mb-4">
                        <button class="btn btn-primary btn_toggle">Change Theme</button>
                    </div>
                    <!-- Code input with line numbers -->
                    <div class="code-container">
                        <div class="code-input-line-numbers"></div>
                        <div class="code-input-container">
                            <textarea class="code-input" placeholder="Write C++ code here..."></textarea>
                        </div>
                    </div>
                    <!-- Button container -->
                    <div class="btn-container mt-2">
                        <button class="btn btn-success btn_run">Run</button>
                        <button class="btn btn-warning btn_clear">Clear</button>
                        <button class="btn btn-secondary btn_download">Download Code</button>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <!-- Output div -->
                <div class="output">
                    Output: <br>
                    <pre id="output-text" class="mt-2"></pre>
                </div>
            </div>
        </div>
    </div>

    <%- include('./views/partials/footer') %>